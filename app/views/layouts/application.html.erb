<!DOCTYPE html>
<html>
  <head>
    <title>StockRails</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-toggleable-md navbar-inverse bg-inverse fixed-top">
      <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <!-- <a class="navbar-brand" href="#">Navbar</a> -->
      <%= link_to 'Stock', root_path, class: "navbar-brand"%>

      <div class="collapse navbar-collapse" id="navbarsExampleDefault">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item <%= current_page?(products_path) ? 'active' : '' %>">
            <%= link_to 'Produtos cadastrados', products_path, class: "nav-link"%>
          </li>
          <li class="nav-item <%= current_page?(sales_path) ? 'active' : '' %>">
            <%= link_to 'Vendas', sales_path, class: "nav-link"%>
          </li>

          <li class="nav-item <%= current_page?(reasons_path) ? 'active' : '' %>">
            <%= link_to 'Motivos', reasons_path, class: "nav-link"%>
          </li>
          <li class="nav-item <%= current_page?(warehouse_changes_path) ? 'active' : '' %>">
            <%= link_to 'Movimentação Estoque', warehouse_changes_path, class: "nav-link"%>
          </li>

          <li class="nav-item <%= current_page?(reports_path) ? 'active' : '' %>">
            <%= link_to 'Relatórios', reports_path, class: "nav-link" %>
          </li>

          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="http://example.com" id="dropdown01" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Dropdown</a>
            <div class="dropdown-menu" aria-labelledby="dropdown01">
              <a class="dropdown-item" href="#">Action</a>
              <a class="dropdown-item" href="#">Another action</a>
              <a class="dropdown-item" href="#">Something else here</a>
            </div>
          </li>
        </ul>

      </div>
    </nav>


    <div class="container-fluid">
      <div class="container-padding">
        <%= yield %>
      </div>
    </div>


  </body>
</html>
