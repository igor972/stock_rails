<p id="notice"><%= notice %></p>

<h1>Motivos</h1>

<table class="table">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Ação</th>
      <th colspan="3">Opções</th>
    </tr>
  </thead>

  <tbody>
    <% @reasons.each do |reason| %>
      <tr>
        <td><%= reason.name %></td>
        <td><%= action_name(reason.action) %></td>
        <td><%= link_to 'Mostar', reason %></td>
        <td><%= link_to 'Editar', edit_reason_path(reason) %></td>
        <td><%= link_to reason, method: :delete, data: { confirm: 'Tem certeza?' } do%>
          <span class="badge badge-danger">Remover</span>
          <%end%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= button_to 'Novo Motivo', new_reason_path, class: 'btn btn-primary', method: :get %>
