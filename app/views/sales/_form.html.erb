<%= form_with(model: sale, local: true) do |form| %>
  <% if sale.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(sale.errors.count, "error") %> prohibited this sale from being saved:</h2>

      <ul>
      <% sale.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <!-- DOM from heaven begin -->
  <div class="append-list">
    <div class="nested_form">
      <%= form.fields_for :sale_products do |sale|%>
        <%= render 'sale_products/sale_product_partial', sale: sale%>
      <% end %>
    </div>
  </div>
  <!-- DOM from heaven end -->

  <div class="field">
    <%= form.label :total %>
    <%= sale.total %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>